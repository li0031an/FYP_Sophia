<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".AssetsPreviewFragment" >

    <Button
        android:id="@+id/imageButtonUpload"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/upload_new_file"
        android:layout_margin="2dp"
        android:textColor="@color/ForestGreen"
        android:background="?android:attr/selectableItemBackground"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_buttom">

        <TextView
            android:id="@+id/textViewPadding1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <!--<ImageButton-->
            <!--android:id="@+id/imageButtonReview"-->
            <!--android:layout_width="0px"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.2"-->
            <!--android:background="@null"-->
            <!--android:onClick="onClick"-->
            <!--android:src="@drawable/ic_action_read" />-->

        <!--<ImageButton-->
            <!--android:id="@+id/imageButtonUpload"-->
            <!--android:layout_width="0px"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.2"-->
            <!--android:background="@null"-->
            <!--android:src="@drawable/av_upload" />-->

        <ImageButton
            android:id="@+id/imageButtonDownload"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/av_download" />

        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="@null"
            android:onClick="onClick"
            android:src="@drawable/content_remove" />

        <TextView
            android:id="@+id/textViewPadding2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />
    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>